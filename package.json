        "bundle:core",
        "bundle:icons",
        "bundle:inputs",
        "build:menus"
      ]
    },
    "bundle:navigation": {
      "command": "rollup -c ./packages/io-navigation/rollup.config.js && find ./packages/io-navigation/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/io-navigation/build/* ./packages/io-navigation/bundle && rm -rf ./packages/io-navigation/build && mv ./packages/io-navigation/bundle ./packages/io-navigation/build",
      "dependencies": [
        "bundle:core",
        "bundle:icons",
        "bundle:inputs",
        "bundle:menus",
        "bundle:markdown",
        "build:navigation"
      ]
    },
    "bundle:sliders": {
      "command": "rollup -c ./packages/io-sliders/rollup.config.js && find ./packages/io-sliders/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/io-sliders/build/* ./packages/io-sliders/bundle && rm -rf ./packages/io-sliders/build && mv ./packages/io-sliders/bundle ./packages/io-sliders/build",
      "dependencies": [
        "bundle:core",
        "bundle:inputs",
        "build:sliders"
      ]
    },
    "bundle:gui": {
      "command": "rollup -c ./packages/io-gui/rollup.config.js && find ./packages/io-gui/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/io-gui/build/* ./packages/io-gui/bundle && rm -rf ./packages/io-gui/build && mv ./packages/io-gui/bundle ./packages/io-gui/build && ./node_modules/.bin/dts-bundle-generator -o packages/io-gui/build/index.d.ts packages/io-gui/build/index.d.ts",
      "dependencies": [
        "build:gui"
      ]
    },
    "dev": {
      "dependencies": [
        "dev:core",
        "dev:colors",
        "dev:icons",
        "dev:inputs",
        "dev:layout",
        "dev:editors",
        "dev:markdown",
        "dev:menus",
        "dev:navigation",
        "dev:sliders",
        "dev:gui"
      ]

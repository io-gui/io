  "wireit": {
    "clean": {
      "dependencies": [
        "clean:core",
        "clean:colors",
        "clean:icons",
        "clean:inputs",
        "clean:layout",
        "clean:editors",
        "clean:markdown",
        "clean:menus",
        "clean:navigation",
        "clean:sliders",
        "clean:gui",
        "clean:three"
      ]
    },
    "clean:core": {
      "command": "rm -rf ./packages/core/build && rm -rf ./packages/core/bundle"
    },
    "clean:colors": {
      "command": "rm -rf ./packages/colors/build && rm -rf ./packages/colors/bundle"
    },
    "clean:icons": {
      "command": "rm -rf ./packages/icons/build && rm -rf ./packages/icons/bundle"
    },
    "clean:inputs": {
      "command": "rm -rf ./packages/inputs/build && rm -rf ./packages/inputs/bundle"
    },
    "clean:layout": {
      "command": "rm -rf ./packages/layout/build && rm -rf ./packages/layout/bundle"
    },
    "clean:editors": {
      "command": "rm -rf ./packages/editors/build && rm -rf ./packages/editors/bundle"
    },
    "clean:markdown": {
      "command": "rm -rf ./packages/markdown/build && rm -rf ./packages/markdown/bundle"
    },
    "clean:menus": {
      "command": "rm -rf ./packages/menus/build && rm -rf ./packages/menus/bundle"
    },
    "clean:navigation": {
      "command": "rm -rf ./packages/navigation/build && rm -rf ./packages/navigation/bundle"
    },
    "clean:sliders": {
      "command": "rm -rf ./packages/sliders/build && rm -rf ./packages/sliders/bundle"
    },
    "clean:gui": {
      "command": "rm -rf ./packages/gui/build && rm -rf ./packages/gui/bundle"
    },
    "clean:three": {
      "command": "rm -rf ./packages/three/build && rm -rf ./packages/three/bundle"
    },
    "lint": {
      "dependencies": [
        "lint:core",
        "lint:colors",
        "lint:icons",
        "lint:inputs",
        "lint:layout",
        "lint:editors",
        "lint:markdown",
        "lint:menus",
        "lint:navigation",
        "lint:sliders",
        "lint:gui",
        "lint:three"
      ]
    },
    "lint:core": {
      "command": "eslint -c ./packages/core/.eslintrc.js ./packages/core/src --fix"
    },
    "lint:colors": {
      "command": "eslint -c ./packages/colors/.eslintrc.js ./packages/colors/src --fix"
    },
    "lint:icons": {
      "command": "eslint -c ./packages/icons/.eslintrc.js ./packages/icons/src --fix"
    },
    "lint:inputs": {
      "command": "eslint -c ./packages/inputs/.eslintrc.js ./packages/inputs/src --fix"
    },
    "lint:layout": {
      "command": "eslint -c ./packages/layout/.eslintrc.js ./packages/layout/src --fix"
    },
    "lint:editors": {
      "command": "eslint -c ./packages/editors/.eslintrc.js ./packages/editors/src --fix"
    },
    "lint:markdown": {
      "command": "eslint -c ./packages/markdown/.eslintrc.js ./packages/markdown/src --fix"
    },
    "lint:menus": {
      "command": "eslint -c ./packages/menus/.eslintrc.js ./packages/menus/src --fix"
    },
    "lint:navigation": {
      "command": "eslint -c ./packages/navigation/.eslintrc.js ./packages/navigation/src --fix"
    },
    "lint:sliders": {
      "command": "eslint -c ./packages/sliders/.eslintrc.js ./packages/sliders/src --fix"
    },
    "lint:gui": {
      "command": "eslint -c ./packages/gui/.eslintrc.js ./packages/gui/src --fix"
    },
    "lint:three": {
      "command": "eslint -c ./packages/three/.eslintrc.js ./packages/three/src --fix"
    },
    "build": {
      "dependencies": [
        "build:core",
        "build:icons",
        "build:inputs",
        "build:layout",
        "build:sliders",
        "build:colors",
        "build:menus",
        "build:markdown",
        "build:navigation",
        "build:editors",
        "build:gui",
        "build:three"
      ]
    },
    "build:core": {
      "command": "tsc --project ./packages/core/tsconfig.json",
      "dependencies": [
        "clean:core",
        "lint:core"
      ]
    },
    "build:colors": {
      "command": "tsc --project ./packages/colors/tsconfig.json",
      "dependencies": [
        "clean:colors",
        "lint:colors",
        "build:core",
        "build:inputs",
        "build:sliders"
      ]
    },
    "build:icons": {
      "command": "tsc --project ./packages/icons/tsconfig.json",
      "dependencies": [
        "clean:icons",
        "lint:icons",
        "build:core"
      ]
    },
    "build:inputs": {
      "command": "tsc --project ./packages/inputs/tsconfig.json",
      "dependencies": [
        "clean:inputs",
        "lint:inputs",
        "build:core",
        "build:icons"
      ]
    },
    "build:layout": {
      "command": "tsc --project ./packages/layout/tsconfig.json",
      "dependencies": [
        "clean:layout",
        "lint:layout",
        "build:core",
        "build:editors",
        "build:icons",
        "build:inputs",
        "build:menus",
        "build:navigation"
      ]
    },
    "build:editors": {
      "command": "tsc --project ./packages/editors/tsconfig.json",
      "dependencies": [
        "clean:editors",
        "lint:editors",
        "build:core",
        "build:inputs",
        "build:sliders",
        "build:colors",
        "build:menus",
        "build:navigation"
      ]
    },
    "build:markdown": {
      "command": "tsc --project ./packages/markdown/tsconfig.json",
      "dependencies": [
        "clean:markdown",
        "lint:markdown",
        "build:core"
      ]
    },
    "build:menus": {
      "command": "tsc --project ./packages/menus/tsconfig.json",
      "dependencies": [
        "clean:menus",
        "lint:menus",
        "build:core",
        "build:icons",
        "build:inputs"
      ]
    },
    "build:navigation": {
      "command": "tsc --project ./packages/navigation/tsconfig.json",
      "dependencies": [
        "clean:navigation",
        "lint:navigation",
        "build:core",
        "build:icons",
        "build:inputs",
        "build:menus",
        "build:markdown"
      ]
    },
    "build:sliders": {
      "command": "tsc --project ./packages/sliders/tsconfig.json",
      "dependencies": [
        "clean:sliders",
        "lint:sliders",
        "build:core",
        "build:inputs"
      ]
    },
    "build:gui": {
      "command": "tsc --project ./packages/gui/tsconfig.json",
      "dependencies": [
        "clean:gui",
        "lint:gui",
        "build:core",
        "build:colors",
        "build:icons",
        "build:inputs",
        "build:layout",
        "build:editors",
        "build:markdown",
        "build:menus",
        "build:navigation",
        "build:sliders"
      ]

        "clean:layout",
        "lint:layout",
        "build:core",
        "build:editors",
        "build:icons",
        "build:inputs",
        "build:menus",
        "build:navigation"
      ]
    },
    "build:editors": {
      "command": "tsc --project ./packages/io-editors/tsconfig.json",
      "dependencies": [
        "clean:editors",
        "lint:editors",
        "build:core",
        "build:inputs",
        "build:sliders",
        "build:colors",
        "build:menus",
        "build:navigation"
      ]
    },
    "build:markdown": {
      "command": "tsc --project ./packages/io-markdown/tsconfig.json",
      "dependencies": [
        "clean:markdown",
        "lint:markdown",
        "build:core"
      ]
    },
    "build:menus": {
      "command": "tsc --project ./packages/io-menus/tsconfig.json",
      "dependencies": [
        "clean:menus",
        "lint:menus",
        "build:core",
        "build:icons",
        "build:inputs"
      ]

        "clean:three",
        "lint:three",
        "build:core",
        "build:layout",
        "build:menus"
      ]
    },
    "bundle": {
      "dependencies": [
        "clean",
        "bundle:core",
        "bundle:colors",
        "bundle:icons",
        "bundle:inputs",
        "bundle:layout",
        "bundle:editors",
        "bundle:markdown",
        "bundle:menus",
        "bundle:navigation",
        "bundle:sliders",
        "bundle:gui",
        "bundle:three"
      ]
    },
    "bundle:core": {
      "command": "rollup -c ./packages/core/rollup.config.js && find ./packages/core/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/core/build/* ./packages/core/bundle && mkdir -p ./packages/core/bundle/demos/todomvc && cp ./packages/core/src/demos/todomvc/index.html ./packages/core/bundle/demos/todomvc/ && cp ./packages/core/src/demos/todomvc/index.css ./packages/core/bundle/demos/todomvc/ && rm -rf ./packages/core/build && mv ./packages/core/bundle ./packages/core/build",
      "dependencies": [
        "build:core"
      ]
    },
    "bundle:colors": {
      "command": "rollup -c ./packages/colors/rollup.config.js && find ./packages/colors/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/colors/build/* ./packages/colors/bundle && rm -rf ./packages/colors/build && mv ./packages/colors/bundle ./packages/colors/build",
      "dependencies": [
        "bundle:core",
        "bundle:inputs",
        "bundle:sliders",
        "build:colors"
      ]
    },
    "bundle:icons": {
      "command": "rollup -c ./packages/icons/rollup.config.js && find ./packages/icons/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/icons/build/* ./packages/icons/bundle && rm -rf ./packages/icons/build && mv ./packages/icons/bundle ./packages/icons/build",
      "dependencies": [
        "bundle:core",
        "build:icons"
      ]
    },
    "bundle:inputs": {
      "command": "rollup -c ./packages/inputs/rollup.config.js && find ./packages/inputs/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/inputs/build/* ./packages/inputs/bundle && rm -rf ./packages/inputs/build && mv ./packages/inputs/bundle ./packages/inputs/build",
      "dependencies": [
        "bundle:core",
        "bundle:icons",
        "build:inputs"
      ]
    },
    "bundle:layout": {
      "command": "rollup -c ./packages/layout/rollup.config.js && find ./packages/layout/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/layout/build/* ./packages/layout/bundle && rm -rf ./packages/layout/build && mv ./packages/layout/bundle ./packages/layout/build",
      "dependencies": [
        "bundle:core",
        "bundle:editors",
        "bundle:icons",
        "bundle:inputs",
        "bundle:menus",
        "bundle:navigation",
        "build:layout"
      ]
    },
    "bundle:editors": {
      "command": "rollup -c ./packages/editors/rollup.config.js && find ./packages/editors/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/editors/build/* ./packages/editors/bundle && rm -rf ./packages/editors/build && mv ./packages/editors/bundle ./packages/editors/build",
      "dependencies": [
        "bundle:core",
        "bundle:icons",
        "bundle:inputs",
        "bundle:sliders",
        "bundle:colors",
        "bundle:menus",
        "bundle:navigation",
        "build:editors"
      ]
    },
    "bundle:markdown": {
      "command": "rollup -c ./packages/markdown/rollup.config.js && find ./packages/markdown/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/markdown/build/* ./packages/markdown/bundle && rm -rf ./packages/markdown/build && mv ./packages/markdown/bundle ./packages/markdown/build",
      "dependencies": [
        "bundle:core",
        "build:markdown"
      ]
    },
    "bundle:menus": {
      "command": "rollup -c ./packages/menus/rollup.config.js && find ./packages/menus/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/menus/build/* ./packages/menus/bundle && rm -rf ./packages/menus/build && mv ./packages/menus/bundle ./packages/menus/build",
      "dependencies": [
        "bundle:core",
        "bundle:icons",
        "bundle:inputs",
        "build:menus"
      ]
    },
    "bundle:navigation": {
      "command": "rollup -c ./packages/navigation/rollup.config.js && find ./packages/navigation/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/navigation/build/* ./packages/navigation/bundle && rm -rf ./packages/navigation/build && mv ./packages/navigation/bundle ./packages/navigation/build",
      "dependencies": [
        "bundle:core",
        "bundle:icons",
        "bundle:inputs",
        "bundle:menus",
        "bundle:markdown",
        "build:navigation"
      ]
    },
    "bundle:sliders": {
      "command": "rollup -c ./packages/sliders/rollup.config.js && find ./packages/sliders/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/sliders/build/* ./packages/sliders/bundle && rm -rf ./packages/sliders/build && mv ./packages/sliders/bundle ./packages/sliders/build",
      "dependencies": [
        "bundle:core",
        "bundle:inputs",
        "build:sliders"
      ]
    },
    "bundle:gui": {
      "command": "rollup -c ./packages/gui/rollup.config.js && find ./packages/gui/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/gui/build/* ./packages/gui/bundle && rm -rf ./packages/gui/build && mv ./packages/gui/bundle ./packages/gui/build && ./node_modules/.bin/dts-bundle-generator -o packages/gui/build/index.d.ts packages/gui/build/index.d.ts",
      "dependencies": [
        "build:gui"
      ]
    },
    "bundle:three": {
      "command": "rollup -c ./packages/three/rollup.config.js && find ./packages/three/build -type f ! -name '*.d.ts' -delete && cp -r ./packages/three/build/* ./packages/three/bundle && rm -rf ./packages/three/build && mv ./packages/three/bundle ./packages/three/build",
      "dependencies": [
        "build:three"
      ]
    },
    "dev": {
      "dependencies": [
        "dev:core",
        "dev:colors",
        "dev:icons",
        "dev:inputs",
        "dev:layout",
        "dev:editors",
        "dev:markdown",
        "dev:menus",
        "dev:navigation",
        "dev:sliders",
        "dev:gui",
        "dev:three"
      ]
    },
    "dev:core": {
      "command": "tsc -w --project ./packages/core/tsconfig.json",
      "service": true
    },
    "dev:colors": {
      "command": "tsc -w --project ./packages/colors/tsconfig.json",
      "service": true

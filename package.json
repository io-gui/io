{
  "name": "@io-gui",
  "version": "2.0.0-alpha.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm clean && pnpm lint && pnpm -r build",
    "bundle": "pnpm build && node bundle.js",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:core": "vitest run --project=core",
    "test:colors": "vitest run --project=colors",
    "test:editors": "vitest run --project=editors",
    "test:icons": "vitest run --project=icons",
    "test:inputs": "vitest run --project=inputs",
    "test:layout": "vitest run --project=layout",
    "test:markdown": "vitest run --project=markdown",
    "test:menus": "vitest run --project=menus",
    "test:navigation": "vitest run --project=navigation",
    "test:sliders": "vitest run --project=sliders",
    "test:three": "vitest run --project=three",
    "clean": "rm -rf packages/**/dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-strip": "^3.0.4",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^25.0.3",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/ui": "4.0.16",
    "eslint": "^9.39.2",
    "playwright": "^1.57.0",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "three": ">=0.182.0"
  }
}

{
  "name": "io-gui",
  "version": "1.4.0-rc9",
  "type": "module",
  "packageManager": "pnpm@9.5.0",
  "description": "Io-Gui, a UI framework for web development.",
  "main": "build/iogui.js",
  "module": "build/iogui.js",
  "types": "build/iogui.d.ts",
  "files": [
    "/src/",
    "/build/",
    "/LICENSE",
    "/README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf build && rm -rf bundle",
    "lint": "eslint -c ./eslint.typescript.js src --fix",
    "docs": "typedoc  --plugin typedoc-plugin-markdown",
    "build": "pnpm clean && pnpm lint && tsc && rollup -c && dts-bundle-generator -o bundle/iogui.d.ts build/iogui.d.ts && rm -rf build && mv bundle build",
    "dev": "pnpm clean && pnpm lint && tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/io-gui/io.git"
  },
  "keywords": [
    "io",
    "gui",
    "iogui",
    "io-gui"
  ],
  "author": "Aleksandar (Aki) Rodic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iogui/iogui/issues"
  },
  "homepage": "https://iogui.dev",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/chai": "^4.3.16",
    "@types/dompurify": "^3.0.5",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.11",
    "chai": "^5.1.1",
    "dompurify": "^3.1.6",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.7.0",
    "eslint-plugin-html": "^8.1.1",
    "globals": "^15.8.0",
    "marked": "^13.0.2",
    "marked-highlight": "^2.1.3",
    "mocha": "^10.6.0",
    "rollup": "^4.18.1",
    "tslib": "^2.6.3",
    "typedoc": "^0.26.4",
    "typedoc-plugin-markdown": "^4.2.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1"
  }
}

    "build:three": "wireit",
    "bundle": "wireit",
    "bundle:core": "wireit",
    "bundle:colors": "wireit",
    "bundle:icons": "wireit",
    "bundle:inputs": "wireit",
    "bundle:layout": "wireit",
    "bundle:editors": "wireit",
    "bundle:markdown": "wireit",
    "bundle:menus": "wireit",
    "bundle:navigation": "wireit",
    "bundle:sliders": "wireit",
    "bundle:gui": "wireit",
    "bundle:three": "wireit",
    "dev": "wireit",
    "dev:core": "wireit",
    "dev:colors": "wireit",
    "dev:icons": "wireit",
    "dev:inputs": "wireit",
    "dev:layout": "wireit",

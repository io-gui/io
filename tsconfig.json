{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {
      "io-color": ["./packages/io-color"],
      "io-color/*": ["./packages/io-color/*"],
      "io-iconset": ["./packages/io-iconset"],
      "io-iconset/*": ["./packages/io-iconset/*"],
      "io-inputs": ["./packages/io-inputs"],
      "io-inputs/*": ["./packages/io-inputs/*"]
    },
    "types": [
      "./types/global.d.ts",
    ]
  },
  "typedocOptions": {
    "hideBreadcrumbs": true,
    "hideGenerator": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeInternal": true,
    "excludeExternals": true,
    "cleanOutputDir": true,
    "githubPages": false,
    "readme": "none",
    "gitRevision": "main",
    "entryPoints": [
      "src/io-gui.ts"
    ],
    "out": "docs/tsdoc"
  },
  "include": [
    "./src"
  ]
}
